<div class="card mb-3">

    <div class="card-header post-header">

        <h5 class="card-title">
            <span class="post-author">
                {% include 'user/_avatar.html.twig' with { 'user': post.author } %}
            </span>
        </h5>

        <div class="post-id">
            #{{ post.id }}
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="{{ asset('img/img.jpg') }}" class="card-img">
            </div>
            <div class="col-md-8">
                <p class="card-text">{{ post.content }}</p>


                {% if hideLink is not defined %}
                <a href="{{ url('post_single', { 'id': post.id }) }}"
                   class="float-right btn btn-outline-primary btn-small card-link">
                    Voir le post
                </a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <div class="post-card-data">
                <p class="card-text">
                    <i class="far fa-comment-alt"></i>
                    <small class="text-muted">
                        <strong> {{ post.nbComments }}</strong> Comments
                    </small>
                </p>
            </div>
            <div class="post-card-data">
                <p class="card-text">

                    {% if app.user and app.user.doesLike(post) %}
                        <a class="like" href="{{ path('post_unlike', { 'id' : post.id }) }}">
                            <i class="fas fa-heart liked"></i>
                        </a>
                    {% else %}
                        <a class="like" href="{{ path('post_like', { 'id' : post.id }) }}">
                            <i class="far fa-heart"></i>
                        </a>
                    {% endif %}

                    <small class="text-muted">
                        <strong>{{ post.likers | length }}</strong> Likes
                    </small>
                </p>
            </div>
            <div class="post-card-data">
                <p class="card-text"><small class="text-muted">Published 3 mins ago</small></p>
            </div>
        </div>
    </div>
</div>