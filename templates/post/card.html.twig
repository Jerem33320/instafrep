<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="{{ asset('img/img.jpg') }}" class="card-img">
        </div>
        <div class="col-md-8">
            <div class="card-header">
                <h5 class="card-title">Post #{{ post.id }}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ post.content }}</p>
                <a href="{{ url('post_single', { 'id': post.id }) }}" class="btn btn-primary card-link">Voir le post</a>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col">
                        <p class="card-text">
                            <i class="far fa-comment-alt"></i>
                            <small class="text-muted">Comments</small>
                        </p>
                    </div>
                    <div class="col">
                        <p class="card-text">
                            <i class="far fa-heart"></i>
                            <small class="text-muted">Likes</small>
                        </p>
                    </div>
                    <div class="col">
                        <p class="card-text"><small class="text-muted">Published 3 mins ago</small></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>