{% from '_macros/field-has_error.html.twig' import hasError %}


{{ form_start(form) }}

<div class="form-group">
    {{ form_label(form.username) }}

    {{ form_widget(form.username, {'attr': { 'class': 'form-control ' ~ hasError(form.username) }}) }}

    <div class="text-danger">
        {{ form_errors(form.username) }}
    </div>

</div>


<div class="form-group">
    {{ form_label(form.avatar, 'Select a cool picture')}}
    <div class="custom-file">
        {{ form_widget(form.avatar, {'attr': { 'class': 'custom-file-input' ~ hasError(form.avatar) }}) }}
        {{ form_label(form.avatar, 'Select a file', { 'label_attr': { 'class': 'custom-file-label' }})}}
    </div>
    <small class="form-text text-muted">
        Only the following valid images format are supported : jpeg, png, gif
    </small>

    <div class="text-danger">
        {{ form_errors(form.avatar) }}
    </div>
</div>


{{ form_widget(form.submit, { 'attr': { 'class' : 'btn btn-primary'}}) }}

{{ form_end(form) }}